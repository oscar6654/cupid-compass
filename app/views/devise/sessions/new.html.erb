<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="col s12">
        <h4><b>Log in</b></h4>
      </div>
    </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, id: "email", type: "text", class: "validate", :required => true %>
      <label for="email">Email</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
    <%= f.password_field :password, autocomplete: "off",id: "password", :required => true %>
    <label for="password", class: "active">Password</label>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>
    </div>
  </div>

    <div class="row">
      <div class="col s12">
      <%= f.submit "Log in" , class: "btn waves-effect waves-light" %>
      </div>
    </div>
<% end %>
  <div class="row">
    <div class="col s12">
      <%= render "devise/shared/links" %>
    </div>
  </div>

  </div>
</div>
